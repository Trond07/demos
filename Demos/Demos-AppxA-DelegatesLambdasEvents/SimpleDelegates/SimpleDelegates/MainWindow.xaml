<Window x:Class="SimpleDelegates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleDelegates"
        mc:Ignorable="d"
        Title="Trig" 
        SizeToContent="WidthAndHeight">

    <StackPanel FocusManager.FocusedElement="{Binding ElementName=TxtDegrees}">
        <StackPanel Orientation="Horizontal">
            <Label Width="100" Margin="5 10 0 0">Angle (degrees)</Label>
            <TextBox Name="TxtDegrees" Width="90" Margin="0 10 5 0" TextAlignment="Right" Foreground="Coral"  FontWeight="Bold" FontSize="12pt"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="5 15 5 5" Width="60" Name="BtnSin" Click="BtnSin_Click">Sin</Button>
            <Button Margin="0 15 5 5" Width="60" Name="BtnCos" Click="BtnCos_Click">Cos</Button>
            <Button Margin="0 15 5 5" Width="60" Name="BtnTan" Click="BtnTan_Click">Tan</Button>
        </StackPanel>
    </StackPanel>
</Window>
